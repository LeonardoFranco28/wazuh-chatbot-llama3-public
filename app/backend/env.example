# =============================================================================
# IaNetworking Backend Environment Configuration
# =============================================================================
# 
# Copia este archivo como .env y personaliza los valores
# cp env.example .env
#
# ⚠️  IMPORTANTE: Nunca subas .env al repositorio
# =============================================================================

# =============================================================================
# Ollama Configuration
# =============================================================================

# URL base de Ollama
# En desarrollo: http://localhost:11434
# En producción: https://tu-ollama-server.com
OLLAMA_BASE_URL=http://localhost:11434

# Modelo de Ollama a usar
# Opciones: llama3, llama3.1, llama3.2, codellama, mistral, etc.
OLLAMA_MODEL=llama3

# =============================================================================
# API Configuration
# =============================================================================

# API Key para autenticación
# Genera una clave segura: openssl rand -base64 32
API_KEY=tu_api_key_segura_aqui

# Puerto del servidor FastAPI
PORT=8000

# Host del servidor FastAPI
HOST=0.0.0.0

# =============================================================================
# SSH Configuration
# =============================================================================

# IP del servidor remoto (Wazuh)
REMOTE_HOST=143.244.165.32

# Usuario SSH
SSH_USERNAME=root

# Ruta a la clave privada SSH
SSH_PRIVATE_KEY=~/.ssh/ia_networking_key

# =============================================================================
# Logging Configuration
# =============================================================================

# Nivel de logging
# Opciones: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Ruta del archivo de logs
LOG_FILE=/var/log/ia_networking.log

# Tamaño máximo del archivo de logs (en MB)
MAX_LOG_SIZE=100

# Número de archivos de backup de logs
LOG_BACKUP_COUNT=5

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key para JWT
# Genera una clave segura: openssl rand -base64 32
JWT_SECRET=tu_jwt_secret_aqui

# Tiempo de expiración del token JWT (en segundos)
JWT_EXPIRATION=3600

# Salt para hashing de contraseñas
# Genera un salt seguro: openssl rand -base64 16
PASSWORD_SALT=tu_password_salt_aqui

# =============================================================================
# Database Configuration (Opcional)
# =============================================================================

# URL de la base de datos PostgreSQL
# DATABASE_URL=postgresql://usuario:password@localhost:5432/ia_networking

# URL de la base de datos Redis (para cache)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Habilitar métricas de Prometheus
ENABLE_METRICS=true

# Puerto para métricas de Prometheus
METRICS_PORT=9090

# =============================================================================
# Cache Configuration
# =============================================================================

# Tiempo de vida del cache (en segundos)
CACHE_TTL=3600

# Tamaño máximo del cache (en MB)
MAX_CACHE_SIZE=100

# =============================================================================
# Chat Configuration
# =============================================================================

# Tiempo de timeout para respuestas del chat (en segundos)
CHAT_TIMEOUT=60

# Número máximo de mensajes en el historial
MAX_CHAT_HISTORY=50

# Tamaño máximo del contexto (en tokens)
MAX_CONTEXT_SIZE=4096

# =============================================================================
# Wazuh Integration
# =============================================================================

# URL del servidor Wazuh
WAZUH_URL=http://localhost:8080

# Credenciales de Wazuh
WAZUH_USERNAME=admin
WAZUH_PASSWORD=tu_wazuh_password

# Rango de días para cargar logs
DEFAULT_LOG_DAYS=7

# =============================================================================
# Development Configuration
# =============================================================================

# Modo de desarrollo
DEBUG=false

# Habilitar CORS
ENABLE_CORS=true

# Orígenes permitidos para CORS
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# =============================================================================
# Production Configuration
# =============================================================================

# URL de producción
# PRODUCTION_URL=https://tu-dominio.com

# Configuración de SSL
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# =============================================================================
# Backup Configuration
# =============================================================================

# Habilitar backup automático
ENABLE_BACKUP=true

# Ruta del directorio de backup
BACKUP_DIR=/backup/ia_networking

# Frecuencia de backup (en horas)
BACKUP_FREQUENCY=24

# =============================================================================
# Security Notes
# =============================================================================
#
# 🔒 Configuraciones de Seguridad Recomendadas:
#
# 1. Usa HTTPS en producción
# 2. Configura rate limiting
# 3. Implementa autenticación robusta
# 4. Usa variables de entorno para credenciales
# 5. Configura CORS apropiadamente
# 6. Implementa logging de seguridad
# 7. Configura backup automático
# 8. Usa claves SSH específicas para el proyecto
#
# ============================================================================= 