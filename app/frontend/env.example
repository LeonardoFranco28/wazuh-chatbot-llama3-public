# =============================================================================
# IaNetworking Frontend Environment Configuration
# =============================================================================
# 
# Copia este archivo como .env.local y personaliza los valores
# cp env.example .env.local
#
# ⚠️  IMPORTANTE: Nunca subas .env.local al repositorio
# =============================================================================

# =============================================================================
# API Configuration
# =============================================================================

# URL del backend API (FastAPI)
# En desarrollo: http://localhost:8000
# En producción: https://tu-dominio.com/api
NEXT_PUBLIC_API_URL=http://localhost:8000

# URL del WebSocket para chat en tiempo real
# En desarrollo: ws://localhost:8000
# En producción: wss://tu-dominio.com
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# Authentication Configuration
# =============================================================================

# Secret key para autenticación
# Genera una clave segura: openssl rand -base64 32
AUTH_SECRET=tu_auth_secret_aqui

# URL base de la aplicación
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# Ollama Configuration
# =============================================================================

# URL del servidor Ollama
# En desarrollo: http://localhost:11434
# En producción: https://tu-ollama-server.com
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434

# Modelo de Ollama a usar
NEXT_PUBLIC_OLLAMA_MODEL=llama3

# =============================================================================
# Wazuh Configuration
# =============================================================================

# URL del servidor Wazuh
# En desarrollo: http://localhost:8080
# En producción: https://tu-wazuh-server.com
NEXT_PUBLIC_WAZUH_URL=http://localhost:8080

# Credenciales de Wazuh (opcional)
WAZUH_USERNAME=admin
WAZUH_PASSWORD=tu_wazuh_password

# =============================================================================
# Development Configuration
# =============================================================================

# Modo de desarrollo
NODE_ENV=development

# Puerto del servidor de desarrollo
PORT=3000

# =============================================================================
# Production Configuration
# =============================================================================

# URL de producción
# NEXT_PUBLIC_PRODUCTION_URL=https://tu-dominio.com

# =============================================================================
# Security Configuration
# =============================================================================

# Headers de seguridad
NEXT_PUBLIC_CSP_NONCE=tu_csp_nonce_aqui

# Configuración de CORS
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# =============================================================================
# Monitoring Configuration
# =============================================================================

# URL de analytics (opcional)
# NEXT_PUBLIC_ANALYTICS_URL=https://analytics.tu-dominio.com

# =============================================================================
# Feature Flags
# =============================================================================

# Habilitar características experimentales
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Habilitar modo debug
NEXT_PUBLIC_DEBUG_MODE=false

# =============================================================================
# Chat Configuration
# =============================================================================

# Tiempo de timeout para respuestas del chat (en segundos)
NEXT_PUBLIC_CHAT_TIMEOUT=60

# Número máximo de mensajes en el historial
NEXT_PUBLIC_MAX_CHAT_HISTORY=50

# =============================================================================
# Security Notes
# =============================================================================
#
# 🔒 Configuraciones de Seguridad Recomendadas:
#
# 1. Usa HTTPS en producción
# 2. Configura headers de seguridad apropiados
# 3. Implementa rate limiting
# 4. Usa variables de entorno para credenciales
# 5. Configura CORS apropiadamente
# 6. Implementa autenticación robusta
#
# ============================================================================= 